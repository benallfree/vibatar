{
  "name": "vite-react-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --cwd server dev",
    "build": "bun run --cwd client build"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "^5.8.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "workspaces": [
    "client",
    "server",
    "sdk"
  ]
}
